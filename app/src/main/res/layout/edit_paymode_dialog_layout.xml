<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">


        <com.datamation.hmdsfa.utils.CustomFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1.5"
            android:background="@drawable/custom_label"
            android:gravity="center_horizontal"
            android:text="PAY MODE"
            android:textColor="@color/unselected"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.datamation.hmdsfa.utils.CustomFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/custom_label"
            android:gravity="center_horizontal"
            android:text="PAY DATE"
            android:textColor="@color/unselected"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.datamation.hmdsfa.utils.CustomFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="0.4"
            android:background="@drawable/custom_label"
            android:gravity="center_horizontal"
            android:text="PAY AMT"
            android:textColor="@color/unselected"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.datamation.hmdsfa.utils.CustomFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:background="@drawable/custom_label"
            android:gravity="center_horizontal"
            android:text="REM AMT"
            android:textColor="@color/unselected"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.datamation.hmdsfa.utils.CustomFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.6"
            android:background="@drawable/custom_label"
            android:gravity="center_horizontal"
            android:text="ALLOC AMT"
            android:textColor="@color/unselected"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_paymode_edit_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/list_view_diveder"
        android:dividerHeight="1dp"
        android:layout_margin="5dp"></ListView>

</LinearLayout>