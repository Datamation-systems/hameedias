    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <com.datamation.hmdsfa.utils.CustomFont
                android:id="@+id/textViewrRtnCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="2dp"
                android:text="DebtorName"
                android:textColor="@color/greenColor"
                android:textSize="24sp" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:divider="@color/blueColor"
                android:dividerPadding="10dp"
                android:layout_gravity="center_horizontal">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/blueColor" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/fragment_day_summary_card_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <TableRow
                        android:id="@+id/tr1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp">

                        <com.datamation.hmdsfa.utils.CustomFont
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:text="Return Ref No"
                            android:textAllCaps="true"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/font_for_all" />


                        <TextView
                            android:id="@+id/editTextRtnOrdno"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="@drawable/edittextstyle"
                            android:layout_toRightOf="@+id/invoice_no_lbl"
                            android:textColor="@android:color/primary_text_light" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tr2"
                        android:layout_below="@+id/tr1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <com.datamation.hmdsfa.utils.CustomFont
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingRight="10dp"
                            android:text="DATE"
                            android:textAllCaps="true"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/font_for_all"
                            />



                        <EditText
                            android:id="@+id/editTextRtnDate"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="55dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/edittextstyle"
                            android:ems="10"
                            android:editable="false"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="14sp">

                        </EditText>
                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:id="@+id/tr3"
                        android:layout_below="@+id/tr2"
                        android:layout_marginTop="10dp"
                        android:weightSum="2"
                        android:layout_height="wrap_content"

                        android:gravity="center_vertical">

                        <com.datamation.hmdsfa.utils.CustomFont
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:paddingRight="10dp"
                            android:text="MANUAL NO"
                            android:textAllCaps="true"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/font_for_all" />

                        <EditText
                            android:id="@+id/editTextRtnManualNo"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="55dp"
                            android:background="@drawable/edittextstyle"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:maxLength="12">

                        </EditText>

                    </TableRow>





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tr6"
                        android:visibility="gone"
                        android:layout_below="@+id/tr_vat"
                        android:layout_marginTop="10dp"
                        android:weightSum="2"
                        android:gravity="center_vertical">

                        <com.datamation.hmdsfa.utils.CustomFont
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingRight="10dp"
                            android:text="Route"
                            android:textAllCaps="true"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/font_for_all"/>

                        <EditText
                            android:id="@+id/editTextRtnRoute"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="55dp"
                            android:background="@drawable/edittextstyle"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:maxLength="12"
                            android:editable="false">

                        </EditText>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tr_vat"
                        android:layout_below="@+id/tr3"
                        android:layout_marginTop="10dp"
                        android:weightSum="2"
                        android:gravity="center_vertical">

                        <com.datamation.hmdsfa.utils.CustomFont
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingRight="10dp"
                            android:text="SELECT VAT DETAILS"
                            android:textAllCaps="true"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/font_for_all"/>


                        <Spinner
                            android:id="@+id/spnnervat"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="55dp"
                            android:background="@drawable/edittextstyle"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:textSize="14sp" />


                    </LinearLayout>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tr_remrks"
                        android:layout_below="@+id/tr_vat"
                        android:weightSum="2"
                        android:layout_marginTop="10dp">

                        <com.datamation.hmdsfa.utils.CustomFont
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingRight="10dp"
                            android:text="REMARKS"
                            android:textAllCaps="true"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/font_for_all"  />


                        <EditText
                            android:id="@+id/editTextRtnRemarks"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="55dp"
                            android:background="@drawable/edittextstyle"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:textSize="14sp">

                        </EditText>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tr_remrks"
                        android:padding="10dp"
                        android:weightSum="2"
                        android:clickable="false">


                        <com.datamation.hmdsfa.utils.CustomFont
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingRight="10dp"
                            android:text="REASON"
                            android:textAllCaps="true"
                            android:textColor="@color/greenColor"
                            android:textSize="@dimen/font_for_all"  />
                        <EditText
                            android:id="@+id/editTextReason"
                            android:layout_marginLeft="0dp"
                            android:clickable="false"
                            android:inputType="textPersonName"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="55dp"
                            android:background="@drawable/edittextstyle"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:textSize="14sp">

                        </EditText>

                        <Button
                            android:id="@+id/btn_reason_search"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/search_button" />

                    </TableRow>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_next" />
</RelativeLayout>